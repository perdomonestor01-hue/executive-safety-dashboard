# Executive Safety Dashboard - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
APP_NAME="Executive Safety Dashboard"
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=safety_dashboard
DB_USER=dashboard_user
DB_PASSWORD=your_secure_db_password_here
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}
REDIS_TTL=3600

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_secure_session_secret_here
SESSION_MAX_AGE=86400000

# Password Hashing
BCRYPT_ROUNDS=12

# =============================================================================
# N8N AUTOMATION PLATFORM
# =============================================================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_USER=admin
N8N_PASSWORD=your_secure_n8n_password_here
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_DB_PASSWORD=your_secure_n8n_db_password_here

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Log Level (error, warn, info, debug)
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings for Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@company.com
SMTP_PASSWORD=your_app_password_here

# Email Templates
FROM_EMAIL=safety-dashboard@company.com
ALERT_EMAIL=executives@company.com

# =============================================================================
# EXTERNAL API INTEGRATIONS
# =============================================================================
# Weather API for Environmental Factors
WEATHER_API_KEY=your_weather_api_key_here

# Workers' Compensation Insurance API
INSURANCE_API_KEY=your_insurance_api_key_here
INSURANCE_API_URL=https://api.insurance-provider.com

# OSHA Integration
OSHA_API_URL=https://api.osha.gov

# =============================================================================
# FILE STORAGE
# =============================================================================
# Local Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 Configuration (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=safety-dashboard-files

# =============================================================================
# ANALYTICS & MACHINE LEARNING
# =============================================================================
# Analytics Service Configuration
ANALYTICS_HOST=localhost
ANALYTICS_PORT=8000
ANALYTICS_API_KEY=your_analytics_api_key_here

# ML Model Configuration
ML_MODEL_PATH=./analytics/models
ML_PREDICTION_THRESHOLD=0.7
ML_RETRAIN_INTERVAL=86400

# =============================================================================
# ENTERPRISE FEATURES
# =============================================================================
# Single Sign-On (SSO)
SSO_ENABLED=false
SSO_PROVIDER=azure-ad
SSO_CLIENT_ID=your_sso_client_id_here
SSO_CLIENT_SECRET=your_sso_client_secret_here
SSO_TENANT_ID=your_sso_tenant_id_here

# Multi-tenant Configuration
MULTI_TENANT_ENABLED=true
DEFAULT_TENANT=company

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=safety-dashboard-backups

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Caching
CACHE_TTL=300
CACHE_MAX_SIZE=100mb

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/Disable Features
FEATURE_REAL_TIME_ALERTS=true
FEATURE_PREDICTIVE_ANALYTICS=true
FEATURE_EXECUTIVE_REPORTS=true
FEATURE_MOBILE_NOTIFICATIONS=true
FEATURE_AUDIT_LOGGING=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Debug Configuration (set to false in production)
DEBUG=false
VERBOSE_LOGGING=false

# Development Tools
ENABLE_SWAGGER=false
ENABLE_PLAYGROUND=false

# =============================================================================
# COMPLIANCE & REGULATORY
# =============================================================================
# Compliance Settings
GDPR_ENABLED=true
HIPAA_ENABLED=false
SOX_COMPLIANCE=true
DATA_RETENTION_DAYS=2555

# Audit Configuration
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=all